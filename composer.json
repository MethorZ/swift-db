{
    "name": "methorz/swift-db",
    "description": "High-performance MySQL database layer with bulk operations, PDO-based",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "mysql",
        "pdo",
        "bulk-insert",
        "repository",
        "performance"
    ],
    "authors": [
        {
            "name": "MethorZ",
            "email": "info@methorz.com"
        }
    ],
    "require": {
        "php": "^8.3 || ^8.4",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "psr/container": "^2.0",
        "psr/log": "^3.0",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0 || ^12.0",
        "slevomat/coding-standard": "^8.25",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "MethorZ\\SwiftDb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MethorZ\\SwiftDb\\Tests\\": "tests/",
            "MethorZ\\SwiftDb\\Tests\\Integration\\": "tests/Integration/",
            "MethorZ\\SwiftDb\\Examples\\": "examples/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "analyze": "phpstan analyze",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
